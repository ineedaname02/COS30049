<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COS30049" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green_light</item>
        <item name="colorPrimaryVariant">@color/primary_green_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_green_light</item>
        <item name="colorSecondaryVariant">@color/primary_green_light</item>
        <item name="colorOnSecondary">@color/primary_green_light</item>
    <!-- Status bar color: always black for the whole app -->
    <item name="android:statusBarColor">@color/black</item>
    <!-- Force status bar icons to be light (white) -->
    <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.COS30049.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.COS30049.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.COS30049.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Text Styles -->
    <style name="TextAppearance.SmartPlant.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SmartPlant.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SmartPlant.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SmartPlant.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Widget.SmartPlant.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary_style</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.SmartPlant.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary_style</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Custom Card Styles -->
    <style name="Widget.SmartPlant.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>

</resources>