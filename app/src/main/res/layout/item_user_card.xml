<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_user_card"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- User email -->
    <TextView
        android:id="@+id/textUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Current role display -->
    <TextView
        android:id="@+id/textUserRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Role: public"
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:textColor="@android:color/darker_gray" />

    <!-- User Statistics Section (Initially hidden) -->
    <LinearLayout
        android:id="@+id/layoutUserStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <!-- Statistics Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Statistics"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Statistics Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textObservations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Observations: 0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textVerifiedIds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verified IDs: 0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Statistics Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/textFlagsSubmitted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Flags: 0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textTotalPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Points: 0"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Account Info Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <!-- Account Info -->
        <TextView
            android:id="@+id/textDateJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joined: -"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textLastLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Login: -"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textLastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Update: -"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Not set"
            android:textSize="12sp" />

        <!-- Privacy Preferences Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Preferences"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <!-- Privacy Preferences -->
        <TextView
            android:id="@+id/textShowContributions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Contributions: Yes"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textShowEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Email: No"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textShowLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Visibility: Approximate"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Hidden role dropdown for admin editing -->
    <Spinner
        android:id="@+id/spinnerUserRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:entries="@array/roles_array" />

</LinearLayout>