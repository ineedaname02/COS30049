<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="8dp">

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/ivPlantImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="#F0F0F0" />

    <!-- Plant Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Scientific Name -->
        <TextView
            android:id="@+id/tvScientificName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scientific Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Common Name -->
        <TextView
            android:id="@+id/tvCommonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Common Name"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666" />

        <!-- Plant ID and IUCN Category Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Plant ID -->
            <TextView
                android:id="@+id/tvPlantId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Plant ID"
                android:textSize="12sp"
                android:textColor="#666"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- IUCN Category -->
            <TextView
                android:id="@+id/tvIucnCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endangered"
                android:textSize="12sp"
                android:textColor="#FFF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="#FF6B6B" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Location"
            android:textSize="12sp"
            android:textColor="#666"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Added By and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvAddedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Added by"
                android:textSize="12sp"
                android:textColor="#666"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 15"
                android:textSize="12sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- Notes (if available) -->
        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Notes will appear here"
            android:textSize="12sp"
            android:textColor="#999"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>