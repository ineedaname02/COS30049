<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="40dp">

    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IoT Dashboard"
        android:textSize="24sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/surface_light"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlantStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Plant Status"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSensorReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moisture: 45% | Temp: 26Â°C"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="View History"
        android:textColor="@color/text_white"
        android:backgroundTint="@color/primary_green"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnRefreshData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Refresh Data"
        android:textColor="@color/text_white"
        android:backgroundTint="@color/accent_blue" />

</LinearLayout>
