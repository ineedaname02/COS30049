<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/sidebar_header_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_vertical">

    <!-- User Avatar Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- User Avatar -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/card_elevated"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textAppearance="@style/TextAppearance.SmartPlant.Title"
                android:textColor="@color/text_white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/nav_header_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textAppearance="@style/TextAppearance.SmartPlant.Caption"
                android:textColor="@color/text_white"
                android:alpha="0.9" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>