<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myPlant.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.myPlant.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.myPlant.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.myPlant.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_admin_dashboard"
        android:name="com.example.myPlant.ui.admin.AdminDashboardFragment"
        android:label="Admin Dashboard"
        tools:layout="@layout/fragment_admin_dashboard" />

    <fragment
        android:id="@+id/nav_plant_verification"
        android:name="com.example.myPlant.ui.admin.PlantVerificationFragment"
        android:label="Plant Verification"
        tools:layout="@layout/fragment_plant_verification" />

    <fragment
        android:id="@+id/nav_plant_location_map"
        android:name="com.example.myPlant.ui.plantlocationmap.PlantLocationMapFragment"
        android:label="Plant Location Map"
        tools:layout="@layout/fragment_plant_location_map" >
        <!-- ✅ ADD THIS ARGUMENT -->
        <argument
            android:name="mapMode"
            app:argType="string"
            android:defaultValue="GLOBAL" />
    </fragment>
    <action
        android:id="@+id/action_global_nav_plant_location_map"
        app:destination="@id/nav_plant_location_map"
        app:launchSingleTop="true"
        app:popUpTo="@id/nav_home">
        <!-- This action uses the default "GLOBAL" mode -->
    </action>
    <!-- ✅ ADD THIS NEW ACTION FOR THE USER HISTORY MAP -->
    <action
        android:id="@+id/action_global_nav_my_observations_map"
        app:destination="@id/nav_plant_location_map"
        app:launchSingleTop="true"
        app:popUpTo="@id/nav_home" >
        <!-- This action explicitly passes the "MY_HISTORY" mode -->
        <argument
            android:name="mapMode"
            android:defaultValue="MY_HISTORY" />
    </action>

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.myPlant.ui.home.HomeFragment"
        android:label="Logout" />

</navigation>